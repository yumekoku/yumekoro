<div class="tag">

<%= form_tag({controller:"dogs",action:"index"}, method: :get) do %>
  <% Tag.all.each do |t| %>
      <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
  <% end %>
  <%= submit_tag '検索' %>
<% end %>

<%= form_tag({controller:"dogs",action:"index"}, method: :get) do %>
  <%= text_field_tag :tag %>
